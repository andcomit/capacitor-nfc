{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["dom", "dom.iterable", "es2017"],
    "module": "Node16",
    "moduleResolution": "node16",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    // Avoid conflicts between DOM and @types/node AbortSignal declarations
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
